{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
